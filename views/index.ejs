    }

    .registration-popup-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .registration-popup-content {
        display: flex;
        width: 90%;
        max-width: 1100px;
        height: 90%;
        max-height: 700px;
        background-color: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .popup-left {
        flex: 1;
        background-color: #F0F0F0;
        position: relative;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .popup-left::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/images/regForm.jpg');
        /* Replace with the actual image URL */
        background-size: cover;
        background-position: center;
        opacity: 0.8;
    }

    .popup-left-text {
        position: relative;
        z-index: 1;
        text-align: left;
        color: #333;
        width: 80%;
    }

    .popup-left-text h2 {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1.3;
    }

    .popup-left-text h2 span {
        font-family: 'Dancing Script', cursive;
        font-size: 1.2em;
        font-weight: normal;
    }

    .popup-right {
        flex: 1.5;
        padding: 2rem;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .popup-close-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        font-size: 2rem;
        background: transparent;
        border: none;
        cursor: pointer;
        color: #ccc;
        transition: color 0.2s ease;
    }

    .popup-close-btn:hover {

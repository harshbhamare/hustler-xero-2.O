        transition: background-color 0.2s ease;
    }

    .btn-register-form:hover {
        background-color: #2F2E41;
    }

    @media (max-width: 768px) {
        .registration-popup-content {
            flex-direction: column;
            width: 100%;
            height: 100%;
            border-radius: 0;
        }

        .popup-left {
            display: none;
        }

        .popup-right {
            padding: 2rem 1rem;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

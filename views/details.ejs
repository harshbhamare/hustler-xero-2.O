<script>
    document.addEventListener('DOMContentLoaded', function() {

        // --- MOBILE NAVIGATION TOGGLE (HAMBURGER MENU) ---
        const navToggle = document.querySelector('.mobile-nav-toggle');
        const mainNav = document.querySelector('.main-nav');
        const registerBtnHeader = document.querySelector('.btn-register');

        if (navToggle && mainNav && registerBtnHeader) {
            navToggle.addEventListener('click', (event) => {
                event.stopPropagation();
                mainNav.classList.toggle('active');
                registerBtnHeader.classList.toggle('active');
            });

            window.addEventListener('click', (event) => {
                if (mainNav.classList.contains('active') && !mainNav.contains(event.target) && !navToggle.contains(event.target)) {
                    mainNav.classList.remove('active');
                    registerBtnHeader.classList.remove('active');
                }
            });
        }
        
        // --- Tab Navigation Logic for Courses ---
        const navItems = document.querySelectorAll('.nav-item');
        const contentSections = document.querySelectorAll('.course-content');

        navItems.forEach(item => {
            item.addEventListener('click', () => {
                // Handle active class for nav items
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');

                // Get the target content ID from data-attribute
                const targetId = item.getAttribute('data-content') + '-content';

                // Hide all content sections
                contentSections.forEach(section => {
                    section.classList.remove('active-content');
                });

                // Show the target content section
                const targetSection = document.getElementById(targetId);
                if (targetSection) {
                    targetSection.classList.add('active-content');
                }
            });
        });

        // --- FAQ Accordion Logic ---
        const accordionItems = document.querySelectorAll('.accordion-item');

        // Function to open the first item by default
        const openFirstItem = () => {
            if (accordionItems.length > 0) {
                const firstItem = accordionItems[0];
                const content = firstItem.querySelector('.accordion-content');
                // Manually set the max-height to its scroll height to show it instantly
                if (content) {
                    content.style.maxHeight = content.scrollHeight + 'px';
                }
            }
        };
        
        openFirstItem();

        accordionItems.forEach(item => {
            const button = item.querySelector('.accordion-button');
            const content = item.querySelector('.accordion-content');

            if (button && content) {
                button.addEventListener('click', () => {
                    const isActive = item.classList.contains('active');

                    // Close all other items
                    accordionItems.forEach(otherItem => {
                        otherItem.classList.remove('active');
                        const otherContent = otherItem.querySelector('.accordion-content');
                        if (otherContent) {
                            otherContent.style.maxHeight = null;
                        }
                    });

                    // If the clicked item was not already active, open it
                    if (!isActive) {
                        item.classList.add('active');
                        content.style.maxHeight = content.scrollHeight + 'px';
                    }
                });
            }
        });

        // --- Registration Pop-up Logic ---
        // Select all buttons that should open the pop-up
        const enrollBtns = document.querySelectorAll('.btn-enroll, .btn-register, .btn-enroll-cta');
        const popupOverlay = document.querySelector('.registration-popup-overlay');
        const closeBtn = document.querySelector('.popup-close-btn');
        const popupCloseOverlay = document.querySelector('.registration-popup-overlay');

        // Add a click listener to each button to show the popup
        enrollBtns.forEach(btn => {
            btn.addEventListener('click', (event) => {
                event.preventDefault();
                if (popupOverlay) {
                    popupOverlay.classList.add('active');
                }
            });
        });

        // Add event listeners for closing the popup
        if (closeBtn && popupOverlay) {
            closeBtn.addEventListener('click', () => {
                popupOverlay.classList.remove('active');
            });
            // This listener closes the popup when clicking on the overlay itself
            popupCloseOverlay.addEventListener('click', (event) => {
                if (event.target === popupCloseOverlay) {
                    popupCloseOverlay.classList.remove('active');
                }
            });
        }
    });
</script>


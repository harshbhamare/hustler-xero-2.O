            z-index: 999;
        }

        .main-nav.active a {
            padding: 1rem 2rem;
            text-align: center;
            width: 100%;
        }

        .btn-register.active {
            display: flex;
            margin: 1rem auto;
            width: calc(100% - 11rem);
            justify-content: center;
        }

        .mobile-nav-toggle {
            display: block;
            z-index: 1001;
        }
    }

    .journey-card {

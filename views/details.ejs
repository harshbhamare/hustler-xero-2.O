    /* ================================== */
    /* REGISTRATION POPUP STYLES          */
    /* ================================== */
    .registration-popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .registration-popup-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .registration-popup-content {
        display: flex;
        width: 90%;
        max-width: 1100px;
        height: 90%;
        max-height: 700px;
        background-color: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .popup-left {
        flex: 1;
        background-color: #F0F0F0;
        position: relative;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .popup-left::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/images/regForm.jpg');
        /* Replace with the actual image URL */
        background-size: cover;
        background-position: center;
        opacity: 0.8;
    }

    .popup-left-text {
        position: relative;
        z-index: 1;
        text-align: left;
        color: #333;
        width: 80%;
    }

    .popup-left-text h2 {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1.3;
    }

    .popup-left-text h2 span {
        font-family: 'Dancing Script', cursive;
        font-size: 1.2em;
        font-weight: normal;
    }

    .popup-right {
        flex: 1.5;
        padding: 2rem;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .popup-close-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        font-size: 2rem;
        background: transparent;
        border: none;
        cursor: pointer;
        color: #ccc;
        transition: color 0.2s ease;
    }

    .popup-close-btn:hover {
        color: #888;
    }

    .form-container {
        width: 100%;
        max-width: 500px;
    }

    .form-header h2 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .form-header p {
        color: #666;
        margin-bottom: 2rem;
    }

    .registration-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-row {
        display: flex;
        gap: 1.5rem;
    }

    .input-group {
        position: relative;
        width: 100%;
    }

    .input-group i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #ccc;
    }

    .input-group input,
    .input-group select {
        width: 100%;
        padding: 12px 12px 12px 45px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1rem;
        color: #333;
        transition: border-color 0.2s ease;
    }

    .input-group input:focus,
    .input-group select:focus {
        outline: none;
        border-color: #007bff;
    }

    .phone-input-group {
        display: flex;
        align-items: center;
    }

    .country-code {
        padding: 12px;
        border: 1px solid #ddd;
        border-right: none;
        border-radius: 8px 0 0 8px;
        background-color: #f5f5f5;
        color: #666;
    }

    .phone-input-group input {
        border-radius: 0 8px 8px 0;
        padding-left: 12px;
    }

    .btn-register-form {
        width: 100%;
        padding: 15px;
        background-color: #3F3D56;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .btn-register-form:hover {
        background-color: #2F2E41;
    }

    @media (max-width: 768px) {
        .registration-popup-content {
            flex-direction: column;
            width: 100%;
            height: 100%;
            border-radius: 0;
        }

        .popup-left {
            display: none;
            /* Hide the left side on mobile for space */
        }

        .popup-right {
            padding: 2rem 1rem;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>
